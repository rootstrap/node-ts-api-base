{
  "name": "node-ts-api-base",
  "version": "1.0.0",
  "description": "Rest api base with nodejs + express",
  "license": "MIT",
  "scripts": {
    "dev": "yarn && nodemon --watch 'src/**/*.ts' --exec 'ENV=dev ts-node -r tsconfig-paths/register' src/server.ts",
    "prebuild": "rm -rf /dist",
    "build": "tsc",
    "start": "ENV=dev node -r tsconfig-paths/register -r ts-node/register ./dist/src/server.js",
    "prod": "ENV=prod node -r ./prod-paths.js ./dist/src/server.js",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "posttypeorm": "prettier -w src/database/migrations",
    "test": "ENV=test jest --runInBand --forceExit --detectOpenHandles --useStderr",
    "test:cover": "yarn test --coverage",
    "test:ci": "ENV=ci jest --runInBand --forceExit --detectOpenHandles --coverage",
    "db:setup": "yarn typeorm schema:sync && yarn seed:run",
    "db:setup:test": "ENV=test yarn db:setup",
    "db:setup:ci": "ENV=ci yarn db:setup",
    "db:reset": "yarn typeorm schema:drop && yarn db:setup",
    "db:reset:test": "ENV=test yarn typeorm schema:drop && yarn db:setup:test",
    "lint": "eslint \"src/**\" --color",
    "seed:config": "ts-node ./node_modules/typeorm-seeding/dist/cli.js config",
    "seed:run": "ts-node -r tsconfig-paths/register ./node_modules/typeorm-seeding/dist/cli.js seed",
    "prepare": "husky install"
  },
  "jestSonar": {
    "reportPath": "__tests__",
    "reportFile": "test-report.xml",
    "indent": 2
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/express-rate-limit": "^6.0.0",
    "@types/faker": "5.5.9",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.181",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.24",
    "@types/nodemailer": "^6.4.4",
    "@types/redis": "^4.0.11",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^26.6.3",
    "jest-sonar-reporter": "^2.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "supertest": "^6.2.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "aws-sdk": "^2.1116.0",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.20.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.12.2",
    "class-validator-jsonschema": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-formidable": "^1.2.0",
    "express-rate-limit": "^6.7.0",
    "helmet": "^5.0.2",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.4",
    "nodemailer": "^6.7.3",
    "nodemailer-express-handlebars": "^5.0.0",
    "nodemailer-sendgrid-transport": "^0.2.0",
    "pg": "^8.7.3",
    "redis": "^3.1.2",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0",
    "routing-controllers-openapi": "^3.1.0",
    "swagger-ui-express": "^4.3.0",
    "ts-jest": "^26.5.6",
    "tsconfig-paths": "^3.14.1",
    "typedi": "^0.10.0",
    "typeorm": "^0.2.41",
    "typeorm-seeding": "^1.6.1"
  }
}

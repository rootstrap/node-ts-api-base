{
  "name": "node-ts-api-base",
  "version": "1.0.0",
  "description": "Rest api base with nodejs + express",
  "license": "MIT",
  "scripts": {
    "dev": "yarn && nodemon --watch 'src/**/*.ts' --exec 'ENV=dev ts-node -r tsconfig-paths/register' src/server.ts",
    "prebuild": "rm -rf /dist",
    "build": "tsc",
    "start": "ENV=dev node -r tsconfig-paths/register -r ts-node/register ./dist/src/server.js",
    "prod": "ENV=prod node -r ./prod-paths.js ./dist/src/server.js",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "posttypeorm": "prettier -w src/database/migrations",
    "test": "ENV=test jest --runInBand --forceExit --detectOpenHandles --useStderr",
    "test:cover": "yarn test --coverage",
    "test:ci": "ENV=ci jest --runInBand --forceExit --detectOpenHandles --coverage",
    "db:setup": "yarn typeorm schema:sync && yarn seed:run",
    "db:setup:test": "ENV=test yarn db:setup",
    "db:setup:ci": "ENV=ci yarn db:setup",
    "db:reset": "yarn typeorm schema:drop && yarn db:setup",
    "db:reset:test": "ENV=test yarn typeorm schema:drop && yarn db:setup:test",
    "lint": "eslint \"src/**\" --color",
    "seed:config": "ts-node ./node_modules/typeorm-seeding/dist/cli.js config",
    "seed:run": "ts-node -r tsconfig-paths/register ./node_modules/typeorm-seeding/dist/cli.js seed",
    "prepare": "husky install"
  },
  "jestSonar": {
    "reportPath": "__tests__",
    "reportFile": "test-report.xml",
    "indent": 2
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.1",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/express-rate-limit": "^5.1.3",
    "@types/faker": "^5.5.8",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^27.0.1",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/lodash": "^4.14.173",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.9.6",
    "@types/nodemailer": "^6.4.4",
    "@types/redis": "^2.8.32",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "eslint": "^7.32.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "jest": "^26.6.3",
    "jest-sonar-reporter": "^2.0.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "aws-sdk": "^2.991.0",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.12.2",
    "class-validator-jsonschema": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-formidable": "^1.2.0",
    "express-rate-limit": "^5.3.0",
    "helmet": "^4.5.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.3",
    "nodemailer": "^6.6.5",
    "nodemailer-express-handlebars": "^4.0.0",
    "nodemailer-sendgrid-transport": "^0.2.0",
    "pg": "^8.7.1",
    "redis": "^3.1.2",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0",
    "routing-controllers-openapi": "^3.1.0",
    "swagger-ui-express": "^4.1.6",
    "ts-jest": "^26.5.6",
    "tsconfig-paths": "^3.11.0",
    "typedi": "^0.10.0",
    "typeorm": "^0.2.37",
    "typeorm-seeding": "^1.6.1"
  }
}
